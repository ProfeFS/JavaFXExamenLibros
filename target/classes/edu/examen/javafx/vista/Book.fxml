<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <spacing>10</spacing>

    <Label fx:id="categoryLabel" text="Categoría" />
    <VBox spacing="5">
        <HBox spacing="10">
            <Label text="ID:" />
            <TextField fx:id="txtId" disable="true" promptText="ID" />
        </HBox>
        <HBox spacing="10">
            <Label text="Título:" />
            <TextField fx:id="txtTitle" promptText="Título" />
        </HBox>
        <HBox spacing="10">
            <Label text="Autor:" />
            <TextField fx:id="txtAuthor" promptText="Autor" />
        </HBox>
        <HBox spacing="10">
            <Label text="ISBN:" />
            <TextField fx:id="txtIsbn" promptText="ISBN" />
        </HBox>
        <HBox spacing="10">
            <Label text="Disponible:" />
            <TextField fx:id="txtAvailable" promptText="Disponible" />
        </HBox>
    </VBox>
    <HBox spacing="10">
        <Button fx:id="btnPrevious" text="Anterior" />
        <Button fx:id="btnNext" text="Siguiente" />
    </HBox>
    <HBox spacing="10">
        <Button fx:id="btnSave" text="Guardar" />
        <Button fx:id="btnAddBook" text="Agregar Libro" />
    </HBox>
</VBox>
